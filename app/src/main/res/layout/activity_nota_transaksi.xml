<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksi.NotaTransaksiActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvjudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rosea Laundry"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCabang"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvIdTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IdTransaksi"
                    android:textSize="20sp"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvketIdTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IdTransaksi"
                    android:textSize="20sp"
                    android:layout_weight="1.35"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tanggal"
                    android:textSize="20sp"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvketTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tanggal"
                    android:textSize="20sp"
                    android:layout_weight="1.35"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Pesanan"
                    android:textSize="20sp"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvketPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Pesanan"
                    android:textSize="20sp"
                    android:layout_weight="1.35"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cvPegawai"
                    android:textSize="20sp"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvketKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cvPegawai"
                    android:textSize="20sp"
                    android:layout_weight="1.35"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <View
            android:id="@+id/vLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CCCCCC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cvLayanan"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvHargaLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvLayanan_Harga"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_weight="1.35"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <View
                android:id="@+id/vLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#CCCCCC"/>

            <TextView
                android:id="@+id/tvTambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/RincianTambahan"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvTambahan"
                app:layout_constraintBottom_toTopOf="@id/vLine4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTambahan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:listitem="@layout/card_layanan_tambahan">
                </androidx.recyclerview.widget.RecyclerView>

            </androidx.core.widget.NestedScrollView>

            <View
                android:id="@+id/vLine3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#CCCCCC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SubtotalTambahan"
                    android:textSize="20sp"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvNominalSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SubtotalTambahan"
                    android:textSize="20sp"
                    android:layout_weight="1.35"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTotalBayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/TotalBayar"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_weight="1.35"/>
                <TextView
                    android:id="@+id/tvNominalBayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/tvLayanan_Harga"
                    android:textStyle="bold"
                    android:layout_weight="1.35"
                    android:textSize="24sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <View
                android:id="@+id/vLine4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btKirim"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#A5B68D"
                    android:text="@string/KirimWhatsApp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btCetak"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#C1BAA1"
                    android:text="@string/Cetak"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>