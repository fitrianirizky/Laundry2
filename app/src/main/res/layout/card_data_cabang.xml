<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvCARD_CABANG"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCARD_CABANG_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id Cabang"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/tvCARD_CABANG_NAMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Cabang"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/tvCARD_CABANG_ALAMAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Lengkap"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/tvCARD_CABANG_JAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jam Operasional"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/tvCARD_CABANG_NOHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Telepon Cabang"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/tvCARD_CABANG_LAYANAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layanan Cabang"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/tvCARD_CABANG_MANAGER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kepala Cabang"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btHUBUNGI"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/btHUBUNGI"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btLIHAT"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/btLIHAT"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
