<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan.TambahLayananActivity">

    <TextView
        android:id="@+id/tvTambah_Layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvTambah_Layanan"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/tvLayanan_Nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvLayanan_Nama"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTambah_Layanan"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"/>

    <EditText
        android:id="@+id/etLayanan_Nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etLayanan_Nama"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLayanan_Nama"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/tvLayanan_Harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvLayanan_Harga"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLayanan_Nama"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <EditText
        android:id="@+id/etLayanan_Harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etLayanan_Harga"
        android:background="@drawable/border"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLayanan_Harga"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/tvNama_Cabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvNama_Cabang"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLayanan_Harga"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <EditText
        android:id="@+id/etNama_Cabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etNama_Cabang"
        android:background="@drawable/border"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNama_Cabang"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"/>

    <Button
        android:id="@+id/btSIMPAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btSIMPAN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNama_Cabang"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>