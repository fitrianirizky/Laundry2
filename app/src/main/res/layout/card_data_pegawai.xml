<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvCARD_PEGAWAI"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCARD_PEGAWAI_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCARD_PEGAWAI_ID"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/tvCARD_PEGAWAI_NAMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCARD_PEGAWAI_NAMA"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/tvCARD_PEGAWAI_ALAMAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCARD_PEGAWAI_ALAMAT"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/tvCARD_PEGAWAI_NOHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCARD_PEGAWAI_NOHP"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/tvCARD_PEGAWAI_CABANG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCARD_PEGAWAI_CABANG"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/tvCARD_PEGAWAI_JABATAN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCARD_PEGAWAI_JABATAN"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btCARD_PEGAWAI_HUBUNGI"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btCARD_PEGAWAI_HUBUNGI"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/btCARD_PEGAWAI_LIHAT"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btCARD_PEGAWAI_LIHAT"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>